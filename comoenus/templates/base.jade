body
	header
		h1(class="a-text demarginalize") #[a(href=url_for('index')) Comoenus]
		dv(id="userspace")
			if session['username'] == null
				a(id="login-a") log in
				a(id="signup-a") sign-up
				form(method="post" id="login-form")
					input(id="lgn-user", class="form-input", type="text", placeholder="Username", name="username")
					input(id="lgn-pass", class="form-input", type="password", placeholder="Password", name="password")
					input(id="lgn-btn", class="form-btn", type="submit", value="log in")
					p(id="err-text" class="demarginalize") test
			else
				a(href="/submit" id="submit-btn") Submit Text
				a(href=url_for('user_page', username=session['username']))= session['username']
				a(href=url_for('logout') id="logout-btn") Log-out
	div(id="content-wrapper")
		block content